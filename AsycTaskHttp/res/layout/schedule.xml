<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/team"></Spinner>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/scheduleLabel" android:text="Schedule:"></TextView>
    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/scheduleContainer">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/schedule" android:orientation="vertical"></LinearLayout>
    </ScrollView>
</LinearLayout>
